{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug testzeus-hercules",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/testzeus_hercules/__main__.py",
            "args": ["--project-base", "opt"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "DEBUG"
            },
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Debug testzeus-hercules with breakpoint",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/testzeus_hercules/__main__.py",
            "args": ["--project-base", "opt"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "DEBUG"
            },
            "justMyCode": false,
            "stopOnEntry": true
        },
        {
            "name": "Debug with Poetry",
            "type": "python",
            "request": "launch",
            "module": "testzeus_hercules",
            "args": ["--project-base", "opt"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "LOG_LEVEL": "DEBUG"
            },
            "justMyCode": false
        }
    ]
}
